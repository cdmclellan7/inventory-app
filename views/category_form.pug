extends layout 

block content 
    h1 #{title} 

    form(method='POST' action='') 
        div.form-group 
            label(for='name') Musical Instrument Family: 
            input#name.form-control(type='text', placeholder='Brass, Percussion, etc.' name='name' required='true' value=(undefined===category ? '' : category.name)) 
            label(form='description') Description 
            input#description.form-control(type='text' placeholder='Description' name='description' value=(undefined===category ? '' : category.description)) 
        button.btn.btn-primary(type='submit') Submit 

    if errors 
        ul 
            for error in errors 
                li!= error.msg 