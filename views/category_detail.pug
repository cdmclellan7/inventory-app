extends layout 

block content 
    h1= title 

    div(style='margin-left:20px;margin-top:20px')
        h2 Musical Instruments 
        p #{category.description}

        dl 
            each item in category_items 
                dt 
                    a(href=item.url) #{item.name} 
                dd #{item.description}
            else 
                p This category has no items.

    hr 
    p 
        a(href=category.url+'/delete') Delete Category